<li class='update-summary'>
	<div class='update-summary-header update-header'>
		<span class='update-summary-title'>
			<%= update_summary.title %> 
		</span>
		<span class='post-date'>
			<%= update_summary.post_at.localtime.strftime('(%a %b %-d at %l:%M %P)')%>
		</span>
	</div>
	<div class='update-summary-description short-description'>
		<%= update_summary.description %>
		<% if update_summary.link_to %>
			<%= link_to 'Read More...', update_summary.link_to, target: '_blank',
	 					class: 'external-link'	%>
		<% end %>
	</div>
</li>




