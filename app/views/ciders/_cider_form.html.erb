<%= form_for @cider do |f| %>
	<% render 'shared/form_errors', object: f.object %>

	<div class='form-group'>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class='form-group'>
		<%= f.label :image_file, 'Image' %>
		<%= f.file_field :image_file %>
	</div>
	<div class='form-group'>
		<%= f.label :season %>
		<%= f.select :season, Cider::SEASONS %>
	</div>
	<div class='form-group'>
		<%= f.label :description %>
		<%= f.text_area :desription %>
	</div>
	<div class='form-group'>
		<%= f.submit 'Submit' %> 
	</div>

<% end %>
