<%= form_for @update do |f| %>
	<%= render 'shared/form_errors', object: f.object%>

	<div class='form-group'>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class='form-group'>
		<%= f.label :image_file, 'Image' %>
		<%= f.file_field :image_file %>
	</div>
	<div class='form-group'>
		<%= f.label :link_to, 'Link' %>
		<%= f.text_field :link_to %>
	<div class='form-group'>
		<%= f.label :post_at, 'Post' %>
		<%#= f.datetime_field :post_at %>
		<%= f.date_field :post_at  %>
		<%= f.time_field :post_at, ignore_date: true %>
	</div>
	<div class='form-group'>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div class='form-group'>
		<%= f.submit 'Submit' %>
	</div>

<% end %>






