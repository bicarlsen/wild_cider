<h1>Update</h1>

<div class='navigation'>
	<%= link_to 'View All', updates_path %>
	<%= link_to 'Delete', update_path(@update), method: :delete, 
		data: { confirm: 'Are you sure you want to delete this update?' } %>
</div>

<div class='update-container'>
	<h4><%= @update.title %></h4>
	
	<section>
		Image: <%= @update.image_file %>
		Post: <%= @update.post_at %>
	</section>
	<section>
		Description: <%= @update.description%>
	</section>
</div>





